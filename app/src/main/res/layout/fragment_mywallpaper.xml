<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/rlEditProfile">
        <ImageView
            android:layout_width="@dimen/_38sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:tint="@color/black"
            android:onClick="onClick"
            android:id="@+id/ivMenu"
            android:src="@drawable/ic_nevigation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_centerInParent="true"
            fontPath="@string/font_bold"
            android:text="My Wallpaper"
            tools:ignore="MissingPrefix" />
        <ImageView
            android:layout_width="@dimen/_38sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:tint="@color/black"
            android:id="@+id/ivAddWallpaper"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_sevice"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_weight="1"
                android:id="@+id/llPending">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    fontPath="@string/font_medium"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"
                    android:text="PENDING"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_weight="1"
                android:id="@+id/llApproved">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    fontPath="@string/font_medium"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"
                    android:text="APPROVED"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_weight="1"
                android:id="@+id/llReject">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    fontPath="@string/font_medium"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"
                    android:text="REJECT"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/viewPanding"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/viewApproved"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/viewReject"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/FramFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>