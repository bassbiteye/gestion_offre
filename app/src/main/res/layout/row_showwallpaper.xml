<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivWallpaper"
        android:src="@drawable/ic_placeholder"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llAdmin"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:riv_oval="true"
            android:scaleType="centerCrop"
            android:src="@drawable/temp"
            android:id="@+id/ivProfile"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_gravity="center_horizontal"
                fontPath="@string/font_bold"
                tools:text="admin"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/tvUserName"
                tools:ignore="MissingPrefix" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_2sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center_horizontal"
                fontPath="@string/font_bold"
                tools:text="admin"
                android:id="@+id/tvWallpaperCategory"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/llTools"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_btn_wallpaper"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:background="@drawable/bg_black_corner_10"
            android:padding="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:tint="@color/white"
            android:onClick="onClick"
            android:src="@drawable/ic_wallpaper"
            tools:ignore="MissingConstraints"
            />
        <ImageView
            android:id="@+id/iv_btn_download"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:background="@drawable/bg_black_corner_10"
            android:padding="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:tint="@color/white"
            android:onClick="onClick"
            android:src="@drawable/ic_downloadwallpaper"
            tools:ignore="MissingConstraints"
            />
        <ImageView
            android:id="@+id/iv_btn_share"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_black_corner_10"
            android:padding="@dimen/_8sdp"
            android:tint="@color/white"
            android:onClick="onClick"
            android:src="@drawable/ic_sharewallpaper"
            tools:ignore="MissingConstraints"
            />
        <ImageView
            android:id="@+id/iv_btn_favourite"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_black_corner_10"
            android:padding="@dimen/_8sdp"
            android:onClick="onClick"
            android:tint="@color/white"
            android:src="@drawable/ic_heart"
            tools:ignore="MissingConstraints"
            />
        <ImageView
            android:id="@+id/iv_btn_edit"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_black_corner_10"
            android:padding="@dimen/_8sdp"
            android:onClick="onClick"
            android:tint="@color/white"
            android:src="@drawable/ic_editwallpaper"
            tools:ignore="MissingConstraints"
            />
    </LinearLayout>
</RelativeLayout>