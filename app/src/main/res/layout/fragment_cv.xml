    <?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".CVFragment">

<!-- TODO: Update blank fragment layout -->
<TextView
    android:gravity="center"
    android:textSize="@dimen/dim_title"
    android:paddingLeft="@dimen/dim_left"
    android:paddingTop="@dimen/dim_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Creation CV" />
<EditText
    android:id="@+id/txtFirstName"
    android:layout_marginTop="@dimen/dim_top"
    android:hint="@string/first_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<EditText
    android:id="@+id/txtLastName"
    android:layout_marginTop="@dimen/dim_top"
    android:hint="@string/last_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<EditText
    android:id="@+id/txtEmail"
    android:layout_marginTop="@dimen/dim_top"
    android:hint="email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<EditText
    android:id="@+id/txtPhoneNumber"
    android:layout_marginTop="@dimen/dim_top"
    android:hint="phone_number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


<TextView
    android:layout_marginTop="@dimen/dim_top"
    android:hint="@string/degrees"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<CheckBox
    android:id="@+id/cbOLevel"
    android:layout_marginTop="@dimen/dim_top"
    android:layout_marginLeft="@dimen/dim_degrees"
    android:text="@string/o_level"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<CheckBox
    android:id="@+id/cbBachelor"
    android:layout_marginTop="@dimen/dim_top"
    android:layout_marginLeft="@dimen/dim_degrees"
    android:text="@string/bachelor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<CheckBox
    android:id="@+id/cbMaster"
    android:layout_marginTop="@dimen/dim_top"
    android:layout_marginLeft="@dimen/dim_degrees"
    android:text="@string/master"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
<Button
    android:layout_marginRight="@dimen/dim_right"
    android:layout_marginLeft="@dimen/dim_left"
    android:id="@+id/btnSave"
    android:layout_marginTop="@dimen/dim_top"
    android:text="@string/save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>